<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
 id="WebApp_ID"
  version="3.1">
  <welcome-file-list>
  	<welcome-file>index.jsp</welcome-file>
  	<welcome-file>index.html</welcome-file>
  	<welcome-file>index.htm</welcome-file>
  	<welcome-file>home.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.xiekongye.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FirstServlet</servlet-name>
    <servlet-class>com.xiekongye.servlet.FirstServlet</servlet-class>
    <init-param>
      <param-name>servletName</param-name>
      <param-value>FirstServlet</param-value>
    </init-param>
    <init-param>
      <param-name>servletDesc</param-name>
      <param-value>这是一个名字叫FirstServlet的Servlet</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>Servlet2</servlet-name>
    <servlet-class>com.xiekongye.servlet.Servlet2</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DownloadServlet</servlet-name>
    <servlet-class>com.xiekongye.servlet.DownloadServlet</servlet-class>
    <init-param>
      <param-name>downloadPath</param-name>
      <param-value>/download/</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>RandomNumImageServlet</servlet-name>
    <servlet-class>com.xiekongye.servlet.RandomNumImage</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DoFormServlet</servlet-name>
    <servlet-class>com.xiekongye.servlet.DoFormServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetRegisterServlet</servlet-name>
    <servlet-class>com.xiekongye.servlet.GetRegisterResult</servlet-class>
    <init-param>  
        <param-name>log4j-properties-location</param-name>  
        <param-value>/WEB-INF/classes/log4j.properties</param-value>  
    </init-param>  
        <load-on-startup>1</load-on-startup>  
  </servlet>
  <servlet>
  	<servlet-name>CheckGuessNumberResultServlet</servlet-name>
  	<servlet-class>com.xiekongye.servlet.CheckGuessResult</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FirstServlet</servlet-name>
    <url-pattern>/servlet/FirstServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet2</servlet-name>
    <url-pattern>/servlet/Servlet2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DownloadServlet</servlet-name>
    <url-pattern>/servlet/DownloadFile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RandomNumImageServlet</servlet-name>
    <url-pattern>/servlet/RandomNumImageServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DoFormServlet</servlet-name>
    <url-pattern>/servlet/DoFormServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetRegisterServlet</servlet-name>
    <url-pattern>/servlet/GetRegisterResult</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CheckGuessNumberResultServlet</servlet-name>
  	<url-pattern>/servlet/CheckGuessResult</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>Author</param-name>
    <param-value>xiekongye</param-value>
  </context-param>
  <context-param>
    <param-name>AppDesc</param-name>
    <param-value>Xiekongye的第一个JavaWeb Application</param-value>
  </context-param>
  <filter>
    <filter-name>FilterDemo</filter-name>
    <filter-class>com.xiekongye.filter.FilterDemo</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FilterDemo</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>com.xiekongye.filter.CharacterEncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
    <servlet>
        <servlet-name>SendEmailServlet</servlet-name>
        <servlet-class>com.xiekongye.servlet.SendEmailServlet</servlet-class>
    </servlet>
  <servlet>
    <servlet-name>CustomerServlet</servlet-name>
    <servlet-class>com.xiekongye.servlet.CustomerServlet</servlet-class>
  </servlet>


    <servlet-mapping>
    	<servlet-name>SendEmailServlet</servlet-name>
    	<url-pattern>/servlet/SendEmail</url-pattern>
    </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CustomerServlet</servlet-name>
    <url-pattern>/servlet/Customer</url-pattern>
  </servlet-mapping>
</web-app>